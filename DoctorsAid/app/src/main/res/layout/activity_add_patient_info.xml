<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sujeeth.docaid.addPatientInfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/patientIDTxtBox2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                />

            <Button
                android:id="@+id/goButton2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="20dp"
                android:text = "Go ->"
                />

            <EditText
                android:id="@+id/enterNameTxtBox"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="100dp"
                />

            <EditText
                android:id="@+id/enterAgeTxtBox"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_below="@+id/enterNameTxtBox"
                android:layout_marginTop="25dp"
                />

            <EditText
                android:id="@+id/genderTxtBox"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_below="@+id/enterAgeTxtBox"
                android:layout_marginTop="25dp"
                />

            <EditText
                android:id="@+id/heightTxtBox"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_below="@+id/genderTxtBox"
                android:layout_marginTop="25dp"
                />

            <EditText
                android:id="@+id/weightTxtBox"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/heightTxtBox"
                android:layout_marginLeft="25dp"
                android:layout_below="@+id/genderTxtBox"
                android:layout_marginTop="25dp"
                />

            <EditText
                android:id="@+id/upperBPTxtBox"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_below="@+id/heightTxtBox"
                android:layout_marginTop="25dp"
                />

            <EditText
                android:id="@+id/Const_BPdividerTxtBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/upperBPTxtBox"
                android:layout_marginLeft="25dp"
                android:layout_below="@+id/heightTxtBox"
                android:layout_marginTop="25dp"
                android:text="/"
                />

            <EditText
                android:id="@+id/lowerBPTxtBox"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/Const_BPdividerTxtBox"
                android:layout_marginLeft="25dp"
                android:layout_below="@+id/heightTxtBox"
                android:layout_marginTop="25dp"
                />

            <EditText
                android:id="@+id/Const_diabeticTxtBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_below="@+id/upperBPTxtBox"
                android:layout_marginTop="25dp"
                android:text="Diabetic"
                />

            <TextView
                android:id="@+id/historyTxtV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "History:"
                android:textSize="18dp"
                android:layout_marginLeft="25dp"
                android:layout_below="@+id/Const_diabeticTxtBox"
                android:layout_marginTop="25dp"
                />

            <EditText
                android:id="@+id/patientHistoryTxtBox"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/Const_diabeticTxtBox"
                android:layout_toRightOf="@id/historyTxtV"
                />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
